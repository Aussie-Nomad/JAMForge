{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Swift Project",
            "type": "shell",
            "command": "swift",
            "args": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Test Swift Project",
            "type": "shell",
            "command": "swift",
            "args": ["test"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build Xcode Project",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project", "ModernProfileCreator.xcodeproj",
                "-scheme", "ModernProfileCreator",
                "-destination", "platform=macOS",
                "build"
            ],
            "group": "build"
        }
    ]
}